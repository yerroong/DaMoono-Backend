generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(30)
  userId   String @unique @db.VarChar(50)
  password String @db.VarChar(255)

  role     Role   @default(USER)

  refreshTokenHash      String?  @db.VarChar(255)
  refreshTokenExpiresAt DateTime?
}

model Plan {
  id                   Int    @id
  name                 String
  price                Int
  data_amount_mb       Int
  overage_speed_mbps   Decimal @db.Decimal(6, 2)
  voice_minutes        Int
  sms_included         Int
  network_type         String
  subscription_services Json
  badges               Json
}

model Subscribe {
  id            Int    @id
  name          String
  price         Int
  monthly_price Int
  category      String
  benefits      Json
  description   String @db.Text
  badges        Json
}

enum ConsultStatus {
  WAITING
  CONNECTED
  ENDED
}

enum MessageSenderRole {
  USER
  CONSULTANT
}

model ConsultSession {
  id           String        @id
  userId       Int
  consultantId Int?
  status       ConsultStatus @default(WAITING)

  messages     ConsultMessage[]

  @@index([userId])
  @@index([consultantId])
}

model ConsultMessage {
  id         String            @id @default(cuid())
  sessionId  String
  seq        Int
  senderRole MessageSenderRole
  content    String            @db.Text

  session    ConsultSession    @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, seq])
  @@index([sessionId])
}
